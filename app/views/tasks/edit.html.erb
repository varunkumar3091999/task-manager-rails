<h1>Editing Task</h1>

<div class="card">
  <div class="card-body">
    <%= render 'form', task: @task, method: :put %>

    <% if @task.parent.present? %>
      <%= link_to 'Back', @task.parent, class: "btn btn-info ml-2" %>
    <% else %>
      <%= link_to 'Back', tasks_path, class: "btn btn-info ml-3" %>
    <% end%>
  </div>
</div>